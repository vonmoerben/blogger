<%= form_for(@article, html: {multipart: true}) do |f| %>

  
  <% @article.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %> 
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list %>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %>
  <% end %>
  <%= f.label :image, "Attach a New Image" %>

  <%= f.file_field :image %>
  <%= f.submit %>
  
<% end %>